{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "cmake",
      "type": "shell",
      //   "type": "cppbuild",
      "command": "cmake",
      //   "command": "D:\\TOOLS\\mingw_v11\\mingw_new\\ucrt64\\bin\\gcc.exe",
      //   "args": ["../"],
      "args": [
        "-fdiagnostics-color=always",
        "-g",
        "${file}",
        "-o",
        // "${fileDirname}\\${fileBasenameNoExtension}.exe"
        "${fileDirname}\\bin\\${fileBasenameNoExtension}.exe"
        // "${workspaceFolder}\\bin\\${fileBasenameNoExtension}.exe"
      ],
      //   "options": {
      //     "cwd": "${fileDirname}/build"
      //   },
      "options": {
        "cwd": "${fileDirname}"
      },
      "problemMatcher": ["$gcc"],
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "detail": "调试器生成的任务。"
    },
    {
      "label": "make",
      "type": "shell",
      "command": "make",
      "args": [],
      "options": {
        "cwd": "${fileDirname}/build"
      }
    },
    {
      "label": "build",
      "dependsOn": ["cmake", "make"]
    }
  ]
}

